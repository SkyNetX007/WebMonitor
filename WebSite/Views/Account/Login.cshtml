@model LoginModel

@{
    ViewData["Title"] = "Login";
}

<body style="background:url(images/bg.jpg) no-repeat;">
    <form asp-action="/Account/Login" method="post">
        <div class="form-group mg-t20">
            <input type="text" class="login_input" id="UserName" name="UserName" placeholder="用户名" />
        </div>
        <div class="form-group mg-t20">
            <input type="password" class="login_input" id="UserPwd" name="UserPwd" placeholder="密码" />
        </div>
        <div class="checkbox mg-b25">
            <label>
                <input type="checkbox" name="RememberMe" />记住我的登录信息
            </label>
        </div>
        <button type="submit" class="login_btn">登 录</button>
    </form>
</body>